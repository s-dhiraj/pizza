
<section class="main-sec">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-12 d-flex align-items-center">
                <div class="main-left">
                    <h2>Are You Hungry?</h2>
                    <h1>Don't Wait !</h1>
                    <button type="button" class="btns mt-5">Order Now</button>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12 ">
                <img src="./img/hero-pizza.png" class="img-fluid" alt="">
            </div>
        </div>
    </div>
    
</section>


<section class="product">
    <div class="container">
        <div class="row mx-auto my-5">
            <% pizza.forEach(function(pizzas) { %>

                <div class="col-lg-3 col-md-3 col-12 my-5">
                    <div class="card">
                        <img src="./img/<%= pizzas.image %>" class="card-img-top" alt="...">
                        <div class="card-body text-center">
                            <h2 class="mb-4"><%= pizzas.name %></h2>
                            <h5 class="mb-4"><%= pizzas.size %></h5>
                        </div>
                        <div class="d-flex justify-content-evenly align-items-center">
                            <h1><%= pizzas.price %></h1>
                            <button data-pizza="<%= JSON.stringify(pizzas) %>" type="button" class="btns add-to-cart"><span>+
                                    Add</span></button>

                        </div>
                    </div>

                </div>
                <% }) %>
        </div>
    </div>
</section>