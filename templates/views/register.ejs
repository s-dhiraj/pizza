<section class="register">
    <div class="container">
        <div class="main-reg">
            <div class="inner-reg">
                
                <form action="/register" method="POST" class="mx-5 my-5">
                    <% if(messages.error) {%>
                        <span class="text-danger h4"><%= messages.error %></span>
                     <%} %>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label fs-3 pb-1">Name</label>
                        <input type="text" name="name" value="<%= messages.name %>" class="form-control py-2 fs-3" id="exampleInputEmail1"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label fs-3 pb-1">Email address</label>
                        <input type="email" name="email" value="<%= messages.email %>" class="form-control py-2 fs-3" id="exampleInputEmail1"
                            aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text fs-5">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label fs-3 pb-1">Password</label>
                        <input type="password" name="password" class="form-control py-2 fs-3" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label fs-4" for="exampleCheck1">Check me out</label>
                    </div>
                    <div class="d-flex justify-content-around align-items-center">
                        <button type="submit" class="btn btnr py-3 px-3 mt-3">Submit</button>
                         <a href="/login" class="fs-4 pass">Sign In</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>